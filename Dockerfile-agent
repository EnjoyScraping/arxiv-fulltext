# arxiv/fulltext-agent

FROM arxiv/base:0.12.1

WORKDIR /opt/arxiv

# MySQL is needed for the arxiv-auth package.
RUN yum install -y which mysql mysql-devel

# Add Python consumer and configuration.
RUN pip install -U pip pipenv uwsgi
ADD Pipfile /opt/arxiv/
RUN pipenv install

VOLUME /data

ENV PATH "/opt/arxiv:${PATH}"

ENV LC_ALL en_US.utf8
ENV LANG en_US.utf8
ENV LOGLEVEL 10

ENV ARXIV_HOME "https://arxiv.org"
ENV STORAGE_VOLUME /data

ADD fulltext /opt/arxiv/fulltext/


VOLUME /checkpoint

ENV KINESIS_STREAM "PDFIsAvailable"
ENV KINESIS_SHARD_ID "0"
ENV KINESIS_CHECKPOINT_VOLUME "/checkpoint"
ENV KINESIS_START_TYPE "AT_TIMESTAMP"

# Add the application itself last, for faster builds on minor revisions.
# ADD bin/start_agent.py /opt/arxiv/

ENTRYPOINT ["pipenv", "run"]
CMD ["python", "-m", "fulltext.agent"]
